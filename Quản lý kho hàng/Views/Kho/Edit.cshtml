@model QLKhoHang.Models.Kho

@{
    ViewData["Title"] = "Sửa Kho";
}

<h2>Sửa Kho</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="MaKho" />

    <div class="mb-3">
        <label asp-for="MaKho" class="form-label"></label>
        <input asp-for="MaKho" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TenKho" class="form-label"></label>
        <input asp-for="TenKho" class="form-control" />
        <span asp-validation-for="TenKho" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DiaChiKho" class="form-label"></label>
        <input asp-for="DiaChiKho" class="form-control" />
        <span asp-validation-for="DiaChiKho" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
